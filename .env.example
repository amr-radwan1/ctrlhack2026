# Copy to `.env` and replace placeholder values before local Docker Compose use.

# Frontend public URL allowed by backend CORS.
FRONTEND_ORIGIN=https://app.example.com

# Required backend settings (fail-fast on startup if missing)
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/?retryWrites=true&w=majority
MONGODB_DB_NAME=ctrlhack
JWT_SECRET_KEY=replace-with-a-long-random-secret

# Optional backend settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440
GEMINI_API_KEY=
MONGODB_ENSURE_INDEXES=true
MONGODB_CONNECT_RETRIES=3
MONGODB_CONNECT_RETRY_DELAY_SECONDS=3

# Frontend public API base URL (embedded in Next.js public env).
# Recommended for Coolify Compose: /api
NEXT_PUBLIC_FASTAPI_BASE_URL=/api

# Internal URL used by Next.js rewrite proxy to reach backend service.
BACKEND_INTERNAL_URL=http://backend:8000
